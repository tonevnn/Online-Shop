@{
    var productsHot = ViewData["productsHot"] as ProductView;
 }
<div id="content">
    <div id="content-detail">
        <div id="content-title">
            <a href="index.html">Home</a> >
            <a href="category1.html">@productsHot.CategoryName</a> >
            @productsHot.ProductName
        </div>
        <div id="product">
            <div id="product-name">
                <h2>@productsHot.ProductName</h2>
                <div id="product-detail">
                    <div id="product-detail-left">
                        <div id="product-img">
                            <img src="/img/1.jpg" />
                        </div>
                        <div id="product-img-items">
                            <div><a href="#"><img src="/img/1.jpg" /></a></div>
                            <div><a href="#"><img src="/img/1.jpg" /></a></div>
                            <div><a href="#"><img src="/img/1.jpg" /></a></div>
                            <div><a href="#"><img src="/img/1.jpg" /></a></div>
                        </div>
                    </div>
                    <div id="product-detail-right">
                        <div id="product-detail-right-content">
                            <div id="product-price">Price: @productsHot.UnitPrice</div>
                            @if (productsHot.UnitsInStock == 0)
                            {
                                <div id="product-status" style="color:red;">Out stock</div>
                            }
                            else
                            {
                                <div id="product-status">In stock</div>
                            }
                            <div id="product-detail-buttons">
                                <div id="product-detail-button">
                                    <form asp-action="BuyNow" asp-route-id="@productsHot.ProductId" asp-route-quantity="1" asp-controller="Cart">
                                        <input type="submit" value="BUY NOW">
                                    </form>
                                    <form asp-action="AddToCart" asp-route-id="@productsHot.ProductId" asp-route-quantity="1" asp-controller="Cart">
                                        <input type="submit" value="ADD TO CART" style="background-color: #fff; color:red;border: 1px solid gray;">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="info-detail">
            <div id="info-detail-title">
                <h2>Information deltail</h2>
                <div style="margin:10px auto;">
                </div>
            </div>
        </div>
    </div>
</div>